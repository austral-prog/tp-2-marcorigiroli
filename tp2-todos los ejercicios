# Ejercicio 1
first_name = "AdA"
last_name  = "LoVeLAce"

# Diferentes formatos
print(first_name.lower(), last_name.lower())   # ada lovelace
print(first_name.capitalize(), last_name.capitalize())   # Ada Lovelace
print(first_name.upper(), last_name.upper())   # ADA LOVELACE
print("\t" + first_name.lower(), last_name.lower())   # "\t" para la sangria    

# Ejercicio 2
country_x = "Bangladesh"
country_y = "Barbados"

resultado_x_first = country_x < country_y
resultado_y_first = country_y < country_x

print(f"The result of {country_x} comes first in the dictionary than {country_y} is {resultado_x_first}.")
print(f"The result of {country_y} comes first in the dictionary than {country_x} is {resultado_y_first}.")

# Ejercicio 3
gasto = float(input("Ingresar gasto:\n"))
dinero_recibido = float(input("Dinero recibido\n"))

vuelto = dinero_recibido - gasto
pesos = int(vuelto)
centavos = ((vuelto - pesos) * 100)

print("\nVuelto\n")
print("Pesos:")
print(pesos)
print("Centavos:")
print(centavos)
